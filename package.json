{
  "name": "v2-addon",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/soxhub/ember-scoped-css",
  "license": "MIT",
  "author": "",
  "scripts": {
    "build": "pnpm --filter '*' build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter v2-addon start --no-watch.clearScreen",
    "start:embroider-app": "pnpm --filter embroider-app start",
    "test": "pnpm --filter '*' test",
    "test:fixture": "pnpm --filter './test-apps/*' test:fixture"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "prettier": "^3.0.3",
    "release-plan": "^0.9.0"
  },
  "volta": {
    "node": "20.13.1",
    "pnpm": "8.15.8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack"
      ]
    },
    "overrides": {
      "@glimmer/validator": "0.84.3",
      "@types/eslint": "^8.0.0"
    }
  }
}
