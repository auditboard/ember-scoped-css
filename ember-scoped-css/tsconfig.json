{
  "extends": ["@tsconfig/ember", "@tsconfig/strictest"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    // why do eslint's types always get involved?
    "skipLibCheck": true,
    // let JS be loose
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "inlineSourceMap": true,
    "declarationMap": true,
    "declarationDir": "declarations"
  }
}
